<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Join.JoinFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:src="@mipmap/moneynote_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:paddingLeft="10dp"
                    android:text="사용자 ID"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:hint="아이디를 입력해주세요."
                    android:id="@+id/user_id"
                    android:background="@drawable/moneynote_border"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"/>

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="User Password"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:hint="비밀번호를 입력해주세요."
                    android:id="@+id/user_pw"
                    android:background="@drawable/moneynote_border"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPassword"/>

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="User Password Check"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:hint="비밀번호를 입력해주세요."
                    android:id="@+id/user_pwcheck"
                    android:background="@drawable/moneynote_border"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPassword"/>

            </LinearLayout>

            <Button
                android:id="@+id/idcheck"
                android:text="ID 중복체크"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"
                android:background="@drawable/moneynote_bacground"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back"
                    android:text="뒤로가기"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/base_color"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/moneynote_border"
                    android:layout_width="150dp"
                    android:layout_height="50dp" />

                <Button
                    android:id="@+id/join"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/moneynote_border"
                    android:text="회원가입"
                    android:textColor="@color/base_color"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>