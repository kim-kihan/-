<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:src="@mipmap/moneynote_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:paddingLeft="10dp"
                    android:text="사용자 ID"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:hint="아이디를 입력해주세요."
                    android:id="@+id/user_id"
                    android:background="@drawable/moneynote_border"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"/>

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="비밀번호"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:hint="비밀번호를 입력해주세요."
                    android:id="@+id/user_pw"
                    android:background="@drawable/moneynote_border"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPassword"/>

            </LinearLayout>

            <Button
                android:id="@+id/login"
                android:text="로그인"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"
                android:background="@drawable/moneynote_bacground"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/kakao_login"
                android:background="@mipmap/kakao_login_medium_narrow"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="50dp" />

            <RelativeLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/not_sign_title"
                    android:layout_centerInParent="true"
                    android:background="#888888"
                    android:layout_width="100dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/not_sign_title"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="아직 회원이 아니신가요?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/not_sign_title"
                    android:layout_centerInParent="true"
                    android:background="#888888"
                    android:layout_width="100dp"
                    android:layout_height="1dp"/>
            </RelativeLayout>

            <Button
                android:id="@+id/join"
                android:text="회원가입"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/base_color"
                android:layout_marginTop="20dp"
                android:background="@drawable/moneynote_border"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="50dp" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>